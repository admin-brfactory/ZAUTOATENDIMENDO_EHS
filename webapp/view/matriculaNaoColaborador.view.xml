<mvc:View controllerName="arcelor.brZAUTOATENDIMENTO_EHS.controller.matriculaNaoColaborador" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:lf="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page showHeader="false" class="TelatipoColaboradorView" enableScrolling="true" floatingFooter="false">
		<OverflowToolbar id="otb1" height="8rem">
			<Image src="{cpfModel>/img}" height="80%"/>
			<Label width="5%"/>
			<Label text="{i18n>lblautoAtendimento}" class="LabelAuto"/>
			<ToolbarSpacer/>
		</OverflowToolbar>
		<Label text="{i18n>CPF}" class="sapUiSmallMargin"/>
		<l:Grid>
			<HBox alignItems="Center">
				<Input type="Number" placeholder="{i18n>lblCPF}" width="100%" id="CPF" liveChange="checaNumerico('CPF', '11'),limpaTimeOut"
					class="inputMatricula"/>
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
				<VBox width="1%"/>
				<Input placeholder="{i18n>lblNome}" id="nome" width="205%" class="inputMatricula" value="" liveChange="checaNome('nome'),limpaTimeOut"/>
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
				<VBox width="17rem"/>
				<Button text="{i18n>lblConfirmar}" width="105%" press="onValidaPress" class="bottonconfirmarmatri"/>
			</HBox>
		</l:Grid>
		<Label text="{i18n>lblaAtendimento}" class="sapUiSmallMargin"/>
		<l:Grid>
			<HBox alignItems="Center">
				<ComboBox items="{cpfModel>/tipoAtendi}" placeholder="{i18n>lbltiposdeAtendimento}" width="26rem" enabled="false" id="comb" class="inputSelected"
					change="limpaTimeOut">
					<core:Item key="{cpfModel>TIPOATEND}" text="{cpfModel>TIPOATENDDESC}"/>
				</ComboBox>
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
				<VBox width="1rem"/>
				<Button text="{i18n>lblCriarAtendimento}" class="bottonCriarAtend" width="175%" press="onCriarAtendiPress" id="CriarArcel" enabled="false"/>
			</HBox>
		</l:Grid>
		<footer class="footer">
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>lblCancelar}" class="bottonCancelar" press="onCancelar" id="ArclCancelar" width="31rem"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>