<mvc:View controllerName="arcelor.brZAUTOATENDIMENTO_EHS.controller.InicialView" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" xmlns:lf="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page showHeader="false" class="TelaInicial" enableScrolling="false">
				<content>
					<FlexBox class="sapUiLargeMargin" alignItems="Center" justifyContent="Center" height="80%">
						<VBox justifyContent="Center">
							<HBox>
								<Label text="{i18n>lblSenhaaqui}" width="100%" class="breathe"/>
							</HBox>
							<HBox>
								<VBox width="25%"/>
								<Button text="{i18n>lblIniciar}" type="Emphasized" width="330%" class="bottonInicial" press="onPress"/>
							</HBox>
						</VBox>
					</FlexBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>